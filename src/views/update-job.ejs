<div class="update-container">
  <h1>Update Job</h1>

  <form action="/job-detail/<%=jobData.id%>" method="POST">
    <div class="form-row">
      <div class="col-md-12 mb-3">
        <select class="custom-select" id="tech" name="jobCatagory">
          <option selected><%=jobData.jobCatagory%></option>
          <%updateOptions[0].jobCatagory.forEach((job)=>{%>
          <option><%=job%></option>
          <%})%>
        </select>
      </div>
      <div class="col-md-12 mb-3">
        <select class="custom-select" id="tech" name="role">
          <option selected><%=jobData.role%></option>
          <%updateOptions[0].roles.forEach((role)=>{%>
          <option><%=role%></option>
          <%})%>
        </select>
      </div>

      <div class="col-md-12 mb-3">
        <label for="jobLocation" class="form-label">Enter job location</label>
        <input
          type="text"
          class="form-control"
          id="jobLocation"
          name="location"
          value="<%= jobData.location%>"
        />
      </div>

      <div class="col-md-12 mb-3">
        <label for="companyName" class="form-label">Company Name</label>
        <input
          type="text"
          class="form-control"
          id="companyName"
          name="company"
          value="<%=jobData.company%>"
        />
      </div>

      <div class="col-md-5 mb-3">
        <label for="salaryRange" class="form-label">Pacakage</label>
        <input
          type="text"
          class="form-control"
          id="salaryRange"
          name="package"
          value="<%=jobData.package%>"
        />
      </div>

      <div class="col-md-7 mb-3">
        <label for="totalPositions" class="form-label">Total Positions</label>
        <input
          type="number"
          class="form-control"
          id="totalPositions"
          name="openings"
          value="<%=jobData.openings%>"
        />
      </div>

      <div class="col-md-6 mb-3">
        <label for="skills" class="form-label"
          >Select skills required for this job</label
        >
        <select class="form-select" id="skills" name="skills" multiple>
          <% updateOptions[0].skills.forEach((skill) => { %>
            <option value="<%= skill %>" <%= jobData.skills.includes(skill) ? "selected" : '' %>><%= skill %></option>
          <% }) %>
        </select>
      </div>

      <div class="col-md-6 mb-3">
        <label for="applyBy" class="form-label">Apply By</label>
        <input
          type="date"
          class="form-control"
          id="applyBy"
          name="applyby"
          value="<%= new Date(jobData.applyby).toISOString().split('T')[0] %>"
        />
      </div>
      <div class="col-md-12">
        <button
          type="submit"
          class="btn btn-primary"
          onclick="updateProduct('<%=jobData.id%>')"
        >
          Update
        </button>
      </div>
    </div>
  </form>
</div>
