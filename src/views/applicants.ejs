<div class="container mt-5">
  <%if(appliants.length==0){%>
  <div class="alert alert-secondary" role="alert">
    No Applicants for this Job yet
  </div>
  <%}else{%>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Contact</th>
        <th>Resume</th>
      </tr>
    </thead>
    <tbody>
      <% appliants.forEach((app)=>{%>
      <tr>
        <td><%=app.id%></td>
        <td><%=app.name%></td>
        <td><%=app.email%></td>
        <td><%=app.contact%></td>
        <td>
          <a
            href="/files/<%=app.filename%>"
            target="_blank"
            class="btn btn-primary"
            >view</a
          >
        </td>
      </tr>
      <%})%>
    </tbody>
  </table>
  <%}%>
</div>
